<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccountActivateStylist"
    android:background="#F4FBD5"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/logo"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:src="@drawable/logolong"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="ADD A PHOTO OF YOUR SALON LOCATION"
                android:textColor="#81CF4D"
                android:textAlignment="center"
                android:layout_margin="10dp">
            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageButton
                    android:id="@+id/profilepic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/hairdresserchair"
                    android:background="?android:selectableItemBackground"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:onClick="photoButton">
                </ImageButton>

            </RelativeLayout>

<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textSize="15sp"-->
<!--                android:text="TELL USERS ABOUT YOUR LOCATION"-->
<!--                android:textColor="#81CF4D"-->
<!--                android:textAlignment="center"-->
<!--                android:layout_margin="10dp">-->
<!--            </TextView>-->

            <EditText
                android:id="@+id/bio"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/border_thick"
                android:layout_margin="20dp"
                android:hint="tell users about your location"
                android:lines="5"
                android:gravity="center">
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="WHAT AMENITIES DOES YOUR LOCATION OFFER?"
                android:textColor="#81CF4D"
                android:textAlignment="center"
                android:layout_margin="10dp">
            </TextView>

            <LinearLayout
                android:id="@+id/amenitylist"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:background="@drawable/mybutton"
                    android:text="Done"
                    android:textColor="@android:color/white"
                    android:textSize="21sp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:onClick="doneButton"
                    />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>