<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4FBD5"
    android:theme="@android:style/Theme.NoTitleBar"
    tools:context=".CreateAccountSelectType">

    <ImageView
        android:id="@+id/logo"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/logolong"/>

    <TextView
        android:id="@+id/txtSelect"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignTop="@id/logo"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:text="Select your account type:"
        android:textAlignment="center"
        android:textColor="#81CF4D"
        android:textSize="22dp">

    </TextView>

    <LinearLayout
        android:id="@+id/ctnButtons"
        android:layout_width="wrap_content"
        android:layout_height="376dp"
        android:layout_alignTop="@id/logo"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="80dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/client"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:onClick="accountTypeButton"
            android:scaleType="fitCenter"
            android:padding="15dp"
            android:src="@drawable/hairstyling">

        </ImageButton>

        <ImageButton
            android:id="@+id/stylist"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:onClick="accountTypeButton"
            android:scaleType="fitCenter"
            android:padding="15dp"
            android:src="@drawable/scissors">

        </ImageButton>

        <ImageButton
            android:id="@+id/salon"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:padding="15dp"
            android:src="@drawable/barberpole">

        </ImageButton>
    </LinearLayout>


</RelativeLayout>