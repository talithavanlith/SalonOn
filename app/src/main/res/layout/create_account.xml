<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="#F4FBD5">

    <View
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#F4FBD5"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/bare"/>

    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="@android:color/white"
        android:hint="First Name"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp" />


    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/firstNameEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@android:color/white"
        android:hint="Last Name"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp" />


    <EditText
        android:id="@+id/emailEditText"
        android:inputType="textEmailAddress"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/lastNameEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@android:color/white"
        android:hint="Email"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:inputType="textPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/emailEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@android:color/white"
        android:hint="Password"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/confirmPasswordEditText"
        android:inputType="textPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/passwordEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@android:color/white"
        android:hint="Confirm password"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp" />


    <Button
        android:id="@+id/continueButton"
        android:onClick="continueButtonOnClick"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/confirmPasswordEditText"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:background= "@drawable/mybutton"
        android:text="Next"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/haveAccountQuestion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/continueButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="#F4FBD5"
        android:text="----------- already have an account? -----------"
        android:textAlignment="center"
        android:textColor="#828282"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/haveAccountTextView"
        android:onClick="haveAccountTextViewOnClick"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/haveAccountQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#F4FBD5"
        android:text="SIGN IN"
        android:textAlignment="center"
        android:textColor="#27AE60"
        android:textSize="20sp" />

</RelativeLayout>