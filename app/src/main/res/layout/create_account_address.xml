<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#F4FBD5">

        <ImageView
            android:id="@+id/logo"
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/bare"/>

        <EditText
            android:id="@+id/addressEditText"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:background="#F7F7F2"
            android:hint="address"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/cityEditText"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/addressEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:background="#F7F7F2"
            android:hint="city"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/stateEditText"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/cityEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:background="#F7F7F2"
            android:hint="state"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/zipEditText"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/stateEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:background="#F7F7F2"
            android:hint="zip"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/countryEditText"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/zipEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:background="#F7F7F2"
            android:hint="country"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/countryEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:onClick="signUpButtonOnClick"
            android:text="Sign Up"
            android:textColor="#F7F7F2"
            android:textSize="21sp"
            app:backgroundTint="#81CF4D"
            android:background="@drawable/mybutton" />


        <TextView
            android:id="@+id/haveAccountQuestion"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/signUpButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="#F4FBD5"
            android:text="----------- already have an account? -----------"
            android:textAlignment="center"
            android:textColor="#828282"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/haveAccountTextView"
            android:onClick="haveAccountTextViewOnClick"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/haveAccountQuestion"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="#F4FBD5"
            android:text="SIGN IN"
            android:textAlignment="center"
            android:textColor="#27AE60"
            android:textSize="20sp" />

    </RelativeLayout>
</ScrollView>