<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F4FBD5">

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/block"/>

    <Button
        android:id="@+id/accelerometerButton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@id/block"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="15dp"
        app:backgroundTint = "#81CF4D"
        android:text="Client"
        android:textColor="@android:color/white"
        android:textSize="21sp"
        android:onClick="clientButtonOnClick"
        />

    <TextView
        android:id="@+id/accelerometerTextView"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/accelerometerButton"
        android:layout_marginBottom="-70dp"
        android:layout_marginLeft="10dp"
        android:background="@android:color/white"
        android:text="I am a Client! Click to sign in."
        android:textColor="@android:color/black"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/lightSensorButton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/accelerometerTextView"
        android:layout_marginBottom="-140dp"
        android:layout_marginLeft="80dp"
        app:backgroundTint = "#81CF4D"
        android:text="Stylist"
        android:textColor="@android:color/white"
        android:textSize="21sp"
        />

    <TextView
        android:id="@+id/lightSensorTextView"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/lightSensorButton"
        android:layout_marginBottom="-70dp"
        android:layout_marginLeft="10dp"
        android:background="@android:color/white"
        android:text="I am a Stylist! Click to sign in."
        android:textColor="@android:color/black"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/temperatureSensorButton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/lightSensorTextView"
        android:layout_marginBottom="-140dp"
        android:layout_marginLeft="80dp"
        app:backgroundTint = "#81CF4D"
        android:text="Salon Owner"
        android:textColor="@android:color/white"
        android:textSize="21sp"
        />

    <TextView
        android:id="@+id/temperatureSensorTextView"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/temperatureSensorButton"
        android:layout_marginBottom="-70dp"
        android:layout_marginLeft="10dp"
        android:background="@android:color/white"
        android:text="I am a Salon Owner! Click to sign in."
        android:textColor="@android:color/black"
        android:textSize="14sp"/>

</RelativeLayout>