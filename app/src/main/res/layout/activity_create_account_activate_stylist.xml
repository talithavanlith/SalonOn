<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccountActivateStylist"
    android:background="#F4FBD5"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:src="@drawable/bare"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Add a profile picture:"
                android:textColor="#81CF4D"
                android:textAlignment="center"
                android:layout_margin="10dp">
            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp">
                <ImageButton
                    android:id="@+id/profilepic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/blankprofilepic"
                    android:background="?android:selectableItemBackground"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:onClick="photoButton">

                </ImageButton>

            </RelativeLayout>
<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textSize="15sp"-->
<!--                android:text="ADD A BIO FOR FUTURE CLIENTS!"-->
<!--                android:textColor="#81CF4D"-->
<!--                android:textAlignment="center"-->
<!--                android:layout_margin="10dp">-->
<!--            </TextView>-->
            <EditText
                android:id="@+id/bio"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/border_thick"
                android:layout_margin="25dp"
                android:hint="add a bio for future clients"
                android:lines="5"
                android:gravity="center">
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Select services you want to offer your clients:"
                android:textColor="#81CF4D"
                android:textAlignment="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColor="#81CF4D"
                android:text="Barber:"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp">
            </TextView>

            <LinearLayout
                android:id="@+id/stylelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:text="Done"
                    android:background="@drawable/mybutton"
                    android:textColor="@android:color/white"
                    android:textSize="21sp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dp"
                    android:onClick="doneButton"
                    />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>